<UserControl x:Class="EnhancePoE.UserControls.MainOverlayContent"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:EnhancePoE.UserControls"
			 mc:Ignorable="d"
			 FontSize="14"
			 xmlns:properties="clr-namespace:EnhancePoE.Properties">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="5" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="5" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="5" />
		</Grid.RowDefinitions>
		<Border Height="50"
				Width="50"
				Grid.Column="3"
				Grid.Row="1"
				Background="{Binding Source={x:Static properties:Settings.Default}, Path=ColorGloves}"
				Margin="5,0"
				CornerRadius="6"
				Opacity="{Binding GlovesOpacity}"
				x:Name="Gloves">
			<Grid>
				<Image Source="/Assets/gloves.png"
					   MaxWidth="50"
					   MaxHeight="50" />
				<Border Width="20"
						Height="20"
						Visibility="{Binding AmountsVisibility}"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						CornerRadius="50"
						Background="White">
					<TextBlock FontSize="18"
							   FontFamily="Segoe UI"
							   FontWeight="DemiBold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
							   TextAlignment="Center"
							   Background="Transparent"
							   Foreground="Black"
							   Text="{Binding GlovesAmount}"></TextBlock>
				</Border>
			</Grid>

		</Border>
		<Border Grid.Column="4"
				Grid.Row="1"
				Height="50"
				Width="50"
				CornerRadius="6"
				Margin="5,0"
				Opacity="{Binding BootsOpacity}"
				x:Name="Boots"
				Background="{Binding Source={x:Static properties:Settings.Default}, Path=ColorBoots}">
			<Grid>
				<Image MaxHeight="50"
					   MaxWidth="50"
					   Source="/Assets/boots.png" />
				<Border Width="20"
						Height="20"
						Visibility="{Binding AmountsVisibility}"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						CornerRadius="50"
						Background="White">
					<TextBlock FontSize="18"
							   FontFamily="Segoe UI"
							   FontWeight="DemiBold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
							   TextAlignment="Center"
							   Background="Transparent"
							   Foreground="Black"
							   Text="{Binding BootsAmount}"></TextBlock>
				</Border>
			</Grid>
		</Border>
		<Border Grid.Column="6"
				Grid.Row="1"
				Height="50"
				CornerRadius="6"
				Width="50"
				Margin="5,0"
				x:Name="Chest"
				Opacity="{Binding ChestsOpacity}"
				Background="{Binding Source={x:Static properties:Settings.Default}, Path=ColorChest}">
			<Grid>
				<Image MaxHeight="50"
					   MaxWidth="50"
					   Source="/Assets/chest.png" />
				<Border Width="20"
						Height="20"
						Visibility="{Binding AmountsVisibility}"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						CornerRadius="50"
						Background="White">
					<TextBlock FontSize="18"
							   FontFamily="Segoe UI"
							   FontWeight="DemiBold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
							   TextAlignment="Center"
							   Background="Transparent"
							   Foreground="Black"
							   Text="{Binding ChestsAmount}"></TextBlock>
				</Border>
			</Grid>

		</Border>
		<Border Grid.Column="7"
				Grid.Row="1"
				Height="50"
				CornerRadius="6"
				Width="50"
				Margin="5,0"
				x:Name="Weapon"
				Opacity="{Binding WeaponsOpacity}"
				Background="{Binding Source={x:Static properties:Settings.Default}, Path=ColorWeapon}">
			<Grid>
				<Image MaxHeight="50"
					   MaxWidth="50"
					   Source="/Assets/weapon.png" />
				<Border Width="20"
						Height="20"
						Visibility="{Binding AmountsVisibility}"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						CornerRadius="50"
						Background="White">
					<TextBlock FontSize="18"
							   FontFamily="Segoe UI"
							   FontWeight="DemiBold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
							   TextAlignment="Center"
							   Background="Transparent"
							   Foreground="Black"
							   Text="{Binding WeaponsAmount}"></TextBlock>
				</Border>
			</Grid>

		</Border>
		<Border Grid.Column="5"
				Grid.Row="1"
				Height="50"
				CornerRadius="6"
				Width="50"
				Margin="5,0"
				Opacity="{Binding HelmetOpacity}"
				Background="{Binding Source={x:Static properties:Settings.Default}, Path=ColorHelmet}"
				x:Name="Helmet">
			<Grid>
				<Image MaxHeight="50"
					   MaxWidth="50"
					   Source="/Assets/helmet.png" />
				<Border Width="20"
						Height="20"
						Visibility="{Binding AmountsVisibility}"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						CornerRadius="50"
						Background="White">
					<TextBlock FontSize="18"
							   FontFamily="Segoe UI"
							   FontWeight="DemiBold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
							   TextAlignment="Center"
							   Background="Transparent"
							   Foreground="Black"
							   Text="{Binding HelmetsAmount}"></TextBlock>
				</Border>
			</Grid>

		</Border>
		<Border Grid.Column="8"
				Grid.Row="1"
				Height="50"
				CornerRadius="6"
				Width="50"
				Margin="5,0"
				Opacity="{Binding RingsOpacity}"
				Background="{Binding Source={x:Static properties:Settings.Default}, Path=ColorRing}"
				x:Name="Rings">
			<Grid>
				<Image MaxHeight="50"
					   MaxWidth="50"
					   Source="/Assets/ring.png" />
				<Border Width="20"
						Height="20"
						Visibility="{Binding AmountsVisibility}"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						CornerRadius="50"
						Background="White">
					<TextBlock FontSize="18"
							   FontFamily="Segoe UI"
							   FontWeight="DemiBold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
							   TextAlignment="Center"
							   Background="Transparent"
							   Foreground="Black"
							   Text="{Binding RingsAmount}"></TextBlock>
				</Border>
			</Grid>
		</Border>
		<Border Grid.Column="9"
				Grid.Row="1"
				Height="50"
				CornerRadius="6"
				Width="50"
				Margin="5,0"
				Opacity="{Binding AmuletsOpacity}"
				Background="{Binding Source={x:Static properties:Settings.Default}, Path=ColorAmulet}"
				x:Name="Amulet">
			<Grid>
				<Image MaxHeight="50"
					   MaxWidth="50"
					   Source="/Assets/amulet.png" />
				<Border Width="20"
						Height="20"
						Visibility="{Binding AmountsVisibility}"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						CornerRadius="50"
						Background="White">
					<TextBlock FontSize="18"
							   FontFamily="Segoe UI"
							   FontWeight="DemiBold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
							   TextAlignment="Center"
							   Background="Transparent"
							   Foreground="Black"
							   Text="{Binding AmuletsAmount}"></TextBlock>
				</Border>
			</Grid>
		</Border>
		<Border Grid.Column="10"
				Grid.Row="1"
				Height="50"
				CornerRadius="6"
				Width="50"
				Margin="5,0"
				Opacity="{Binding BeltsOpacity}"
				Background="{Binding Source={x:Static properties:Settings.Default}, Path=ColorBelt}"
				x:Name="Belt">
			<Grid>
				<Image MaxHeight="50"
					   MaxWidth="50"
					   Source="/Assets/belt.png" />
				<Border Width="20" Height="20"
				Visibility="{Binding AmountsVisibility}"
				VerticalAlignment="Top" HorizontalAlignment="Right" CornerRadius="50" Background="White">
					<TextBlock FontSize="18"
							   FontFamily="Segoe UI"
							   FontWeight="DemiBold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
								TextAlignment="Center"
							   Background="Transparent"
							   Foreground="Black"
							   Text="{Binding BeltsAmount}"></TextBlock>
				</Border>

			</Grid>
		</Border>
		<Button x:Name="RefreshButton"
				Click="RefreshButton_Click_1"
				Width="50"
				IsEnabled="{Binding FetchButtonEnabled}"
				Grid.Column="11"
				Grid.Row="1"
				Content="Fetch"
				Margin="5,0"></Button>
		<Button x:Name="ReloadFilterButton"
				Click="ReloadFilterButton_Click"
				Width="50"
				Grid.Column="12"
				Grid.Row="1"
				Margin="5,0">
			<TextBlock TextAlignment="Center">Reload<LineBreak />Filter</TextBlock>
		</Button>
			<Button x:Name="OpenStashTabOverlay"
				Click="OpenStashTabOverlay_Click"
				Width="50"
				Grid.Column="1"
				Grid.Row="1"
				Content="{Binding OpenStashOverlayButtonContent}"
				Margin="5,0"></Button>
		<UniformGrid Grid.Row="1"
					 Grid.Column="2"
					 Height="50"
					 Width="50"
					 Columns="1"
					 Rows="2"
					 Margin="5,0"
					 Background="White">
			<TextBlock TextAlignment="Center"
					   VerticalAlignment="Center"
					   Text="Sets" />
			<TextBlock x:Name="FullSetsTextBlock"
					   Text="{Binding FullSetsText}"
					   VerticalAlignment="Center"
					   TextAlignment="Center" />
		</UniformGrid>
		<ProgressBar Grid.Column="1"
					 Grid.ColumnSpan="12"
					 Grid.Row="2"
					 Height="5"
					 Minimum="0"
					 Maximum="10"
					 IsIndeterminate="{Binding IsIndeterminate}"
					 Margin="10,10,10,0"
					 Foreground="Aqua"
					 Background="AntiqueWhite"
					 BorderThickness="0,0,0,0"
					 x:Name="OverlayProgressBar"></ProgressBar>
		<Border Grid.Column="4"
				Grid.ColumnSpan="6"
				Grid.Row="0"
				CornerRadius="5"
				Background="White"
				Margin="0,0,0,4"
				Visibility="{Binding WarningMessageVisibility}">
			<TextBlock VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   Text="{Binding WarningMessage}"
					   FontSize="16"></TextBlock>
		</Border>
	</Grid>
</UserControl>
