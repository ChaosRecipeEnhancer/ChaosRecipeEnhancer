<Window x:Class="ChaosRecipeEnhancer.UI.View.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:properties="clr-namespace:ChaosRecipeEnhancer.UI.Properties"
        mc:Ignorable="d"
        FontSize="14"
        Title="Chaos Recipe Enhancer Settings"
        FontFamily="Segoe UI Light"
        SizeToContent="WidthAndHeight"
        WindowStyle="SingleBorderWindow"
        MouseDown="Window_MouseDown"
        ResizeMode="CanResize"
        Top="{Binding Source={x:Static properties:Settings.Default}, Path=SettingsWindowTopPosition, Mode=TwoWay}"
        Left="{Binding Source={x:Static properties:Settings.Default}, Path=SettingsWindowLeftPosition, Mode=TwoWay}">

    <Border BorderBrush="DarkGray"
            BorderThickness="1">

        <Grid Name="MainGrid"
              MinHeight="500"
              MinWidth="1143"
              Focusable="True">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!-- Tab Container Start -->
            <TabControl Grid.Column="1"
                        Grid.Row="1">

                <!-- General Settings Tab Start -->
                <TabItem Header="General">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Path of Exile Section Start -->
                        <Grid Grid.Column="1"
                              Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="25" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
                                       Grid.ColumnSpan="2"
                                       Text="Path of Exile"
                                       FontSize="24"
                                       FontWeight="Bold" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="3"
                                       VerticalAlignment="Center"
                                       Text="Account Name:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="The name of your account" />

                            <TextBox x:Name="AccountName"
                                     Grid.Column="3"
                                     Grid.Row="3"
                                     Width="200"
                                     Text="{Binding Source={x:Static properties:Settings.Default}, Path=PathOfExileAccountName, Mode=TwoWay}" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="5"
                                       VerticalAlignment="Center"
                                       Text="PoE Session ID:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="PoE Session ID. Visit https://github.com/ChaosRecipeEnhancer/EnhancePoEApp for more information." />

                            <TextBox x:Name="SessionId"
                                     Grid.Column="3"
                                     Grid.Row="5"
                                     Width="200"
                                     FontFamily="{StaticResource PasswordFont}"
                                     Text="{Binding Source={x:Static properties:Settings.Default}, Path=PathOfExileWebsiteSessionId, Mode=TwoWay}" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="7"
                                       VerticalAlignment="Center"
                                       Text="League:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="The league you are playing in." />

                            <TextBox x:Name="CustomLeagueInput"
                                     Grid.Column="3"
                                     Grid.Row="7"
                                     Width="200"
                                     Text="{Binding Source={x:Static properties:Settings.Default}, Path=LeagueName, Mode=TwoWay}"
                                     Visibility="{Binding CustomLeagueVisible}" />

                            <ComboBox x:Name="MainLeagueComboBox"
                                      Grid.Column="3"
                                      Grid.Row="7"
                                      Width="200"
                                      VerticalContentAlignment="Center"
                                      SelectedValue="{Binding Source={x:Static properties:Settings.Default}, Path=LeagueName, Mode=TwoWay}"
                                      Visibility="{Binding MainLeagueVisible}" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="8"
                                       VerticalAlignment="Center"
                                       Text="Custom League:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="If you are playing in a custom league, check this box to input the league name manually." />

                            <CheckBox x:Name="CustomLeagueCheckBox"
                                      Grid.Column="3"
                                      Grid.Row="8"
                                      VerticalAlignment="Center"
                                      Checked="CustomLeagueCheckBox_Checked"
                                      Unchecked="CustomLeagueCheckBox_Unchecked"
                                      IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=CustomLeagueEnabled, Mode=TwoWay}" />

                        </Grid>
                        <!-- Path of Exile Section End -->

                        <!-- Recipes Section Start -->
                        <Grid Grid.Column="1"
                              Grid.Row="2">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="10" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
                                       VerticalAlignment="Center"
                                       Grid.ColumnSpan="2"
                                       Text="Recipes"
                                       FontSize="24"
                                       FontWeight="Bold" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="3"
                                       VerticalAlignment="Center"
                                       Text="Chaos Orb Recipe:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Activates Chaos Recipe. Mutually exclusive to Regal Recipe." />

                            <CheckBox x:Name="ChaosRecipeCheckBox"
                                      Grid.Column="3"
                                      Grid.Row="3"
                                      VerticalAlignment="Center"
                                      Checked="ChaosRecipeCheckBox_Checked"
                                      IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=ChaosRecipeTrackingEnabled, Mode=TwoWay}" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="5"
                                       VerticalAlignment="Center"
                                       Text="Regal Recipe:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Activates Regal Recipe. Mutually exclusive to Chaos Recipe." />

                            <CheckBox x:Name="RegalRecipeCheckBox"
                                      Grid.Column="3"
                                      Grid.Row="5"
                                      VerticalAlignment="Center"
                                      Checked="RegalRecipeCheckBox_Checked"
                                      IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=RegalRecipeTrackingEnabled, Mode=TwoWay}" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="7"
                                       VerticalAlignment="Center"
                                       Text="Exalted Shard Recipe:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Activates Exalted Shard Recipe. Not fully functional at the moment. Visit github for more information." />

                            <CheckBox x:Name="ExaltedRecipeCheckBox"
                                      Grid.Column="3"
                                      Grid.Row="7"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=ExaltedShardRecipeTrackingEnabled, Mode=TwoWay}" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="9"
                                       VerticalAlignment="Center"
                                       Text="Include Identified Items:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Also counts identified Items for 1 chaos per set." />

                            <CheckBox x:Name="IncludeIdentifiedCheckBox"
                                      Grid.Column="3"
                                      Grid.Row="9"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=IncludeIdentifiedItemsEnabled, Mode=TwoWay}" />

                        </Grid>
                        <!-- Recipes Section End -->

                        <!-- Sound Section Start -->
                        <Grid Grid.Column="3"
                              Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
                                       VerticalAlignment="Center"
                                       Grid.ColumnSpan="2"
                                       Text="Sound"
                                       FontSize="24"
                                       FontWeight="Bold" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="3"
                                       VerticalAlignment="Center"
                                       Text="Notification Sound:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Plays a sound everytime you have to refresh your loot filter." />

                            <CheckBox x:Name="PlaySoundCheckBox"
                                      Grid.Column="3"
                                      Grid.Row="3"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=SoundEnabled, Mode=TwoWay}" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="5"
                                       VerticalAlignment="Center"
                                       Text="Sound Volume:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Sound Volume" />

                            <Slider x:Name="VolumeSlider"
                                    Width="200"
                                    Grid.Column="3"
                                    Grid.Row="5"
                                    VerticalAlignment="Center"
                                    Minimum="0"
                                    Maximum="100"
                                    AutoToolTipPlacement="TopLeft"
                                    IsMoveToPointEnabled="True"
                                    AutoToolTipPrecision="0"
                                    PreviewMouseUp="VolumeSlider_PreviewMouseUp"
                                    Value="{Binding Source={x:Static properties:Settings.Default}, Path=Volume, Mode=TwoWay}" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="7"
                                       VerticalAlignment="Center"
                                       Text="Loot Filter Sound:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="The location of your loot filter sound mp3 file (*.mp3). If you don't choose a file the default sound will be used" />

                            <Button Grid.Column="3"
                                    Grid.Row="7"
                                    x:Name="FilterSoundLocationDialog"
                                    Width="200"
                                    Click="FilterSoundLocationDialog_OnClick"
                                    ToolTipService.InitialShowDelay="50"
                                    ToolTip="{Binding Source={x:Static properties:Settings.Default}, Path=FilterModificationPendingSoundFileLocation, Mode=TwoWay}"
                                    Content="{Binding Source={x:Static properties:Settings.Default}, Path=FilterModificationPendingSoundFileLocation, Mode=TwoWay}"
                                    HorizontalContentAlignment="Left">

                                <Button.Style>

                                    <Style TargetType="Button">

                                        <Setter Property="Background"
                                                Value="Transparent" />

                                        <Style.Triggers>

                                            <Trigger Property="IsMouseOver"
                                                     Value="True">

                                                <Setter Property="Background"
                                                        Value="Transparent" />

                                            </Trigger>

                                        </Style.Triggers>

                                    </Style>

                                </Button.Style>

                            </Button>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="9"
                                       VerticalAlignment="Center"
                                       Text="Item Set Sound:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="The location of your Item Set Sound mp3 file (*.mp3). If you don't choose a file the default sound will be used" />

                            <Button Grid.Column="3"
                                    Grid.Row="9"
                                    x:Name="ItemPickupLocationDialog"
                                    Width="200"
                                    Click="ItemPickupLocationDialog_OnClick"
                                    ToolTipService.InitialShowDelay="50"
                                    ToolTip="{Binding Source={x:Static properties:Settings.Default}, Path=ItemSetCompletedSoundFileLocation, Mode=TwoWay}"
                                    Content="{Binding Source={x:Static properties:Settings.Default}, Path=ItemSetCompletedSoundFileLocation, Mode=TwoWay}"
                                    HorizontalContentAlignment="Left">

                                <Button.Style>

                                    <Style TargetType="Button">

                                        <Setter Property="Background"
                                                Value="Transparent" />

                                        <Style.Triggers>

                                            <Trigger Property="IsMouseOver"
                                                     Value="True">

                                                <Setter Property="Background"
                                                        Value="Transparent" />

                                            </Trigger>

                                        </Style.Triggers>

                                    </Style>

                                </Button.Style>

                            </Button>

                        </Grid>
                        <!-- Sound Section End -->

                        <!-- Hotkeys Section Start -->
                        <Grid Grid.Column="3"
                              Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="10" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
                                       VerticalAlignment="Center"
                                       Grid.ColumnSpan="2"
                                       Text="Hotkeys"
                                       FontSize="24"
                                       FontWeight="Bold" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="3"
                                       VerticalAlignment="Center"
                                       Text="Fetch Stash Contents:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Hotkey for fetching the most up-to-date stash contents. Remember that you must re-zone to force your stash contents to update on GGG's servers." />

                            <Button x:Name="RefreshHotkey"
                                    Width="200"
                                    Grid.Column="3"
                                    Grid.Row="3"
                                    IsManipulationEnabled="False"
                                    Focusable="False"
                                    Content="{Binding Source={x:Static properties:Settings.Default}, Path=FetchStashHotkey, Mode=TwoWay, TargetNullValue=&lt; not set &gt;}"
                                    Click="RefreshHotkey_Click">

                                <Button.Style>

                                    <Style TargetType="Button">

                                        <Setter Property="Background"
                                                Value="Transparent" />

                                        <Style.Triggers>

                                            <Trigger Property="IsMouseOver"
                                                     Value="True">

                                                <Setter Property="Background"
                                                        Value="Transparent" />

                                            </Trigger>

                                        </Style.Triggers>

                                    </Style>

                                </Button.Style>

                            </Button>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="5"
                                       VerticalAlignment="Center"
                                       Text="Toggle Set Tracker Overlay:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Hotkey for showing/hiding the Set Tracker Overlay. While hidden, there will be no requests to the server." />

                            <!-- TODO: [Refactor] Rename the event methods to better represent what they do (i.e. CustomHotkeyToggle -> ToggleSetTracker something something)-->
                            <Button x:Name="CustomHotkeyToggle"
                                    Width="200"
                                    Grid.Column="3"
                                    Grid.Row="5"
                                    IsManipulationEnabled="False"
                                    Focusable="False"
                                    Content="{Binding Source={x:Static properties:Settings.Default}, Path=ToggleSetTrackerOverlayHotkey, Mode=TwoWay, TargetNullValue=&lt; not set &gt;}"
                                    Click="CustomHotkeyToggle_Click">

                                <Button.Style>

                                    <Style TargetType="Button">

                                        <Setter Property="Background"
                                                Value="Transparent" />

                                        <Style.Triggers>

                                            <Trigger Property="IsMouseOver"
                                                     Value="True">

                                                <Setter Property="Background"
                                                        Value="Transparent" />

                                            </Trigger>

                                        </Style.Triggers>

                                    </Style>

                                </Button.Style>

                            </Button>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="7"
                                       VerticalAlignment="Center"
                                       Text="Toggle Stash Tab Overlay:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Hotkey for showing/hiding the Stash Tab Overlay." />

                            <Button x:Name="StashTabHotkey"
                                    Width="200"
                                    Grid.Row="7"
                                    Grid.Column="3"
                                    IsManipulationEnabled="False"
                                    Focusable="False"
                                    Content="{Binding Source={x:Static properties:Settings.Default}, Path=ToggleStashTabOverlayHotkey, Mode=TwoWay, TargetNullValue=&lt; not set &gt;}"
                                    Click="StashTabHotkey_Click">

                                <Button.Style>

                                    <Style TargetType="Button">

                                        <Setter Property="Background"
                                                Value="Transparent" />

                                        <Style.Triggers>

                                            <Trigger Property="IsMouseOver"
                                                     Value="True">

                                                <Setter Property="Background"
                                                        Value="Transparent" />

                                            </Trigger>

                                        </Style.Triggers>

                                    </Style>

                                </Button.Style>

                            </Button>

                        </Grid>
                        <!-- Hotkeys Section End -->

                        <!-- General Section Start -->
                        <Grid Grid.Column="2"
                              Grid.Row="1"
                              Grid.RowSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                            </Grid.ColumnDefinitions>
                            <!-- TODO: [Refactor] We probably don't need all these row definitions, do we? -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10" />   <!-- Row 1 -->
                                <RowDefinition Height="30" />   <!-- Row 2 -->
                                <RowDefinition Height="5" />    <!-- Row 3 -->
                                <RowDefinition Height="25" />   <!-- Row 4 -->
                                <RowDefinition Height="5" />    <!-- Row 5 -->
                                <RowDefinition Height="25" />   <!-- Row 6 -->
                                <RowDefinition Height="5" />    <!-- Row 7 -->
                                <RowDefinition Height="25" />   <!-- Row 8 -->
                                <RowDefinition Height="5" />    <!-- Row 9 -->
                                <RowDefinition Height="25" />   <!-- Row 10 -->
                                <RowDefinition Height="5" />    <!-- Row 11 -->
                                <RowDefinition Height="25" />   <!-- Row 12 -->
                                <RowDefinition Height="5" />    <!-- Row 13 -->
                                <RowDefinition Height="25" />   <!-- Row 14 -->
                                <RowDefinition Height="5" />    <!-- Row 15 -->
                                <RowDefinition Height="25" />   <!-- Row 16 -->
                                <RowDefinition Height="5" />    <!-- Row 17 -->
                                <RowDefinition Height="25" />   <!-- Row 18 -->
                                <RowDefinition Height="5" />    <!-- Row 19 -->
                                <RowDefinition Height="25" />   <!-- Row 20 -->
                                <RowDefinition Height="5" />    <!-- Row 21 -->
                                <RowDefinition Height="25" />   <!-- Row 22 -->
                                <RowDefinition Height="10" />   <!-- Row 23 -->
                            </Grid.RowDefinitions>

                            <!-- General Section Title (Row 1) Start -->
                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
                                       VerticalAlignment="Center"
                                       Grid.ColumnSpan="2"
                                       Text="General"
                                       FontSize="24"
                                       FontWeight="Bold" />
                            <!-- General Section Title (Row 1) End -->

                            <!-- Full Set Threshold Setting (Row 3) Start -->
                            <TextBlock Grid.Column="1"
                                       Grid.Row="3"
                                       VerticalAlignment="Center"
                                       Text="Full Set Threshold:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Number of full sets you want. If you have collected this amount of items of an item type, item type will get deactivated. Leave at 0 for auto calculation, that means 4 sets for each normal tab and 16 sets for each quad tab.  " />

                            <TextBox x:Name="Sets"
                                     Grid.Column="3"
                                     Grid.Row="3"
                                     Width="200"
                                     Text="{Binding Source={x:Static properties:Settings.Default}, Path=FullSetThreshold, Mode=TwoWay}" />
                            <!-- Full Set Threshold Setting (Row 3) Start -->

                            <!-- Target StashTab Setting (Row 5) Start -->
                            <TextBlock Grid.Column="1"
                                       Grid.Row="5"
                                       VerticalAlignment="Center"
                                       Text="Target Stash:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="The stash tab you want to use, your individual stash tab or your guild stash." />

                            <ComboBox Grid.Column="3"
                                      Grid.Row="5"
                                      Width="200"
                                      VerticalContentAlignment="Center"
                                      SelectionChanged="StashTargetComboBox_SelectionChanged"
                                      SelectedIndex="{Binding Source={x:Static properties:Settings.Default}, Path=TargetStash, Mode=TwoWay}">

                                <ComboBoxItem Content="My Stash" />
                                <ComboBoxItem Content="Guild Stash" />

                            </ComboBox>
                            <!-- StashTab Mode Setting (Row 5) End -->

                            <!-- StashTab Mode Setting (Row 7) Start -->
                            <TextBlock Grid.Column="1"
                                       Grid.Row="7"
                                       VerticalAlignment="Center"
                                       Text="Stash Tab Query Mode:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="The stash tab fetching mode. Stash tabs will automatically be added." />

                            <ComboBox Grid.Column="3"
                                      Grid.Row="7"
                                      Width="200"
                                      VerticalContentAlignment="Center"
                                      SelectionChanged="ComboBox_SelectionChanged"
                                      SelectedIndex="{Binding Source={x:Static properties:Settings.Default}, Path=StashTabQueryMode, Mode=TwoWay}">

                                <ComboBoxItem Content="ID" />
                                <ComboBoxItem Content="Prefix" />
                                <ComboBoxItem Content="Suffix" />
                                <!-- TODO: [Refactor] Query by folder name stuff (doesn't work; not supported by API) -->
                                <!-- <ComboBoxItem Content="Folder Name" /> -->

                            </ComboBox>
                            <!-- StashTab Mode Setting (Row 7) End -->

                            <!-- StashTab Query [Index / String] Setting (Row 7) Start -->

                            <!-- Individual Stash Tab Indices Start -->
                            <TextBlock Name="StashTabIndicesTextBlock"
                                       Grid.Column="1"
                                       Grid.Row="9"
                                       VerticalAlignment="Center"
                                       Text="Stash Tab Indices:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Every stash tab with this indices will be added. Separate them by ',' e.g. '0,1,2,3,4,5' will fetch first 6 stash tabs."
                                       Visibility="{Binding TabIndicesVisible}" />

                            <TextBox Name="StashTabIndicesTextBox"
                                     Grid.Column="3"
                                     Grid.Row="9"
                                     Width="200"
                                     Visibility="{Binding TabIndicesVisible}"
                                     Text="{Binding Source={x:Static properties:Settings.Default}, Path=StashTabIndices, Mode=TwoWay}" />
                            <!-- Individual Stash Tab Indices End -->

                            <!-- Individual Stash Tab Name Prefix Start -->
                            <TextBlock Name="StashTabNamePrefixTextBlock"
                                       Grid.Column="1"
                                       Grid.Row="9"
                                       VerticalAlignment="Center"
                                       Text="Stash Tab Prefix:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Every stash tab which name starts with this prefix will be added."
                                       Visibility="{Binding TabNamePrefixVisible}" />

                            <TextBox Name="StashTabNamePrefixTextBox"
                                     Grid.Column="3"
                                     Grid.Row="9"
                                     Width="200"
                                     Visibility="{Binding TabNamePrefixVisible}"
                                     Text="{Binding Source={x:Static properties:Settings.Default}, Path=StashTabPrefix, Mode=TwoWay}" />
                            <!-- Individual Stash Tab Name Prefix End -->

                            <!-- Individual Stash Tab Name Suffix Start -->
                            <TextBlock Name="StashTabNameSuffixTextBlock"
                                       Grid.Column="1"
                                       Grid.Row="9"
                                       VerticalAlignment="Center"
                                       Text="Stash Tab Suffix:"
                                       ToolTipService.InitialShowDelay="50"
                                       ToolTip="Every stash tab which name ends with this suffix will be added."
                                       Visibility="{Binding TabNameSuffixVisible}" />

                            <TextBox Name="StashTabNameSuffixTextBox"
                                     Grid.Column="3"
                                     Grid.Row="9"
                                     Width="200"
                                     Visibility="{Binding TabNameSuffixVisible}"
                                     Text="{Binding Source={x:Static properties:Settings.Default}, Path=StashTabSuffix, Mode=TwoWay}" />
                            <!-- Individual Stash Tab Name Suffix End -->

                            <!-- TODO: [Refactor] Query by folder name stuff (doesn't work; not supported by API) -->
                            <!-- Stash Tab Folder Name Start -->
                            <!-- <TextBlock Name="FolderNameTextBlock" -->
                            <!--            Grid.Column="1" -->
                            <!--            Grid.Row="9" -->
                            <!--            VerticalAlignment="Center" -->
                            <!--            Text="Folder Name:" -->
                            <!--            ToolTipService.InitialShowDelay="50" -->
                            <!--            ToolTip="Every stash tab inside a specified folder (folder name must match exactly)." -->
                            <!--            Visibility="{Binding FolderNameVisible}" /> -->
                            <!-- -->
                            <!-- <TextBox Name="FolderNameTextBox" -->
                            <!--          Grid.Column="3" -->
                            <!--          Grid.Row="9" -->
                            <!--          Width="200" -->
                            <!--          Visibility="{Binding FolderNameVisible}" -->
                            <!--          Text="{Binding Source={x:Static properties:Settings.Default}, Path=StashFolderName, Mode=TwoWay}" /> -->
